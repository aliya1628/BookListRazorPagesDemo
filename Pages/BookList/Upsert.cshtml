@page
@model BookListRazorPagesDemo.Pages.BookList.UpsertModel
@{
    ViewData["Title"] = "Upsert";
}

<br />
<h2 class="text-info">@(Model.Book.Id!=0 ? "Edit" : "Create") Book</h2>
<br />
<div class="border">
    <form method="post">
        @if (Model.Book.Id != 0)
        {
        <input type="hidden" asp-for="Book.Id" />
        }
        
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="container" style="padding:30px;">
            <div class="form-group">
                <div class="row">
                    <div class="col-3">
                        <label asp-for="Book.Name"></label>
                    </div>
                    <div class="col-6">
                        <input asp-for="Book.Name" class="form-control" />
                    </div>
                    <span asp-validation-for="Book.Name" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-3">
                        <label asp-for="Book.Author"></label>
                    </div>
                    <div class="col-6">
                        <input asp-for="Book.Author" class="form-control" />
                    </div>
                    <span asp-validation-for="Book.Author" class="text-danger"></span>

                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-3">
                        <label asp-for="Book.ISBM"></label>
                    </div>
                    <div class="col-6">
                        <input asp-for="Book.ISBM" class="form-control" />
                    </div>
                    <span asp-validation-for="Book.ISBM" class="text-danger"></span>

                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-3 offset-3">
                        <button type="submit" class="btn btn-primary form-control">@(Model.Book.Id != 0 ? "Update" : "Create")</button>
                    </div>
                    <div class="col-3">
                        <a asp-page="Index" class="btn btn-success form-control">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
